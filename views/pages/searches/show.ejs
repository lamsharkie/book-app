<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Showing...</title>
    <link rel="stylesheet" type="text/css" href="/base.css" />
</head>
<body>

   <section>

        <%  books.forEach(book => {  %>
            <img src="<%= books[0].imageurl %>"/>
        <%  }) %>

        <!-- <h4><%= books[0].title %></h4> -->        
          <%  books.forEach(book => {  %>
                <h4><%= book.title %></h4>
          <%  }) %>

          <%  books.forEach(book => {  %>
            <h4><%= book.authors_names %></h4>
          <%  }) %>
          
          <%  books.forEach(book => {  %>
            <h4><%= book.description %></h4>
          <%  }) %>
        
        <!-- <h5><%= books[0].authors_names[0] %></h5>
        <p><%= books[0].description %></p> -->

   </section>
    
</body>
</html>