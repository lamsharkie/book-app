<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Showing...</title>
    <link rel="stylesheet" type="text/css" href="/reset.css" />
    <link rel="stylesheet" type="text/css" href="/base.css" />
    <link rel="stylesheet" type="text/css" href="/layout.css" />
    <link rel="stylesheet" type="text/css" href="/module.css" />
</head>
<body>
  <nav>
    <div>Best Books</div>
    <ul>
        <a href="./searches/new"><li>Search</li></a>
        <a href="./pages/index"><li>Search</li></a>
    </ul>
</nav>

  <header>
    <h6>Search Results</h6>
  </header>

  <main>
    <% books.forEach(book=>{ %>
    <section class="book">
      <div class="bookContainer">
        <img src="<%=book.imageurl%>">
        <h4 name="title"><%= book.title %></h4>
        <h5 name="authors"><%= book.authors %></h5>
        <p name="description"><%= book.description %></p>
        <p>ISBN: <span name="isbn"><%= book.isbn%></span></p>
        <!-- fake input form? -->
        <form action="/books" method="post"></form>
          <button type="submit">Add to Database</button>
        </form>
      </div>
    </section>
    <% }) %>
  </main>
</body>
</html>