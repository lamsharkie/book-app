<% books.forEach(book=>{ %>
  <section class="book">
    <div class="bookContainer">
      <h4><%= book.title %></h4>
      <img src="<%=book.imageurl%>">
      <h5><%= book.authors %></h5>
      <p><%= book.description %></p>
      <p class="isbn">ISBN: <%= book.isbn%></p>
      <p class="id">ID #: <%= book.id %></p>
      <p class="bookshelf">Bookshelf: <%= book.bookshelf %></p>
      <form action="/books" method="post">
        <fieldset class="hidden">
          <input name="title" value="<%= book.title %>">
          <input name="authors" value="<%= book.authors %>">
          <input name="description" value="<%= book.description %>">
          <input name="imageurl" value="<%= book.imageurl %>">
          <input name="isbn" value="<%= book.isbn %>">
        </fieldset>
        <button class="addDBButton" type="submit">Add to Database</button>
      </form>
    </div>
  </section>
<% }) %>